<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.33"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.66"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/bCallApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Call API"/>

    <TextView
        android:id="@+id/tvRaw"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Raw String From API"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bCallApi"
        app:layout_constraintBottom_toTopOf="@id/gl1"
        android:scrollbars="vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/gl1"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvProcessed"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Processed String"
        app:layout_constraintBottom_toTopOf="@id/gl2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl1"
        android:scrollbars="vertical"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/gl2"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvProcessedJob"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Processed Job String"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl2"
        android:scrollbars="vertical"/>



</androidx.constraintlayout.widget.ConstraintLayout>